%table#minesweeper{:"ng-controller" => "MinesweeperCtrl"}
  %tr{:"ng-repeat" => "row in minefield.game"}
    %td{:"ng-repeat" => "cell in row", :"ng-click" => "minefield.reveal(cell.row, cell.column)"}
      .cell-value{:"ng-show" => "cell.revealed"} {{cell.mine ? '*' : cell.count ? cell.count : ''}}
